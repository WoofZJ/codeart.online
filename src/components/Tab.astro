---
import { Icon } from "astro-icon/components";

interface Props {
    title: string;
    icon: string;
}

const { title, icon } = Astro.props;
---

<div class="h-8 flex bg-tab-titlebar-bg">
    <div class="px-4 h-full flex items-center gap-1 bg-tab-title-bg">
        <Icon name={icon} size="20" />
        <span class="text-sm">{title}</span>
    </div>
</div>

<div class="flex-1 overflow-auto">
    <slot />
</div>
